<h1>Log in</h1>
<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me do %>
  <%= f.check_box :remember_me %>
    <span>Keep me logged in</span>
  <% end %>

  <%= f.submit "Log in" %>
  <p>Don't have account? <%= link_to "Sign up", signup_path %></p>
<% end %>
